<!DOCTYPE html>

<html>
<%= stylesheet_link_tag "application" %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true  %>
  <head>
    <title>DominicanOffice</title>
    <%= csrf_meta_tags %>


  </head>

  <body>
  <div class="sidemenu">
    <%= render 'users/user_header', current_user: current_user %>
  <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
    <% if current_user %>

        <div class="domain-crawler">
          <%= render 'domain_summary' %>
          <%= render 'new_domain_form', args: {:user_id=>current_user.id, :domain_crawler=>DomainCrawler.new }%>
        </div>





    <% end %>
    <%= yield %>
  </div>
  </body>
</html>
