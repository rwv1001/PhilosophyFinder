
<ul class="child-crawler-page" name="ul-crawler-page-<%=args[:parent_id]%>" style="display: none" >

  <% args[:crawler_pages].each do |crawler_page, children| %>

      <li>
        <% url = crawler_page.name%>


        <% if children.present? %>
            <%= render 'domain_crawlers/expand_buttons', id: crawler_page.id %>
            <%= render 'domain_crawlers/url', args:{:url => url, :crawler_page_id => crawler_page.id, :long_url =>  crawler_page.URL,  :root => false} %>
            <%= render 'domain_crawlers/submenu_crawler_pages', args: {:crawler_pages => children, :parent_id => crawler_page.id}  %>
        <% else %>
            <%= render 'domain_crawlers/url', args:{:url => url, :crawler_page_id => crawler_page.id, :long_url =>  crawler_page.URL} %>
        <% end %>
      </li>
  <% end %>
</ul>
