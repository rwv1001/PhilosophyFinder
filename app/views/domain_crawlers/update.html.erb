<h1>Domain Crawler#Update</h1>
<p>Find me in app/views/domain_crawler/index.html.erb sausage</p>
<h1>Listing users</h1>





<% content_for :title, @domain_crawler.domain_home_page %>


<div id="submenu">
  <%= render 'domain_crawlers/submenu_domain_crawlers', domain_crawlers: DomainCrawler.all %>
</div>


<p id="notice"><%= notice %></p>

<div id="domain_crawler_details">
  <%= render 'domain_crawlers/body_details', domain_crawler: @domain_crawler %>
</div>


<%= form_for @domain_crawler do |f| %>
    <% if @domain_crawler.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% @domain_crawler.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :domain_home_page %><br />
      <%= f.text_field :domain_home_page %>
    </div>
    <div class="field">
      <%= f.label :short_name%><br />
      <%= f.text_field :short_name %>
    </div>
    <div class="field">
      <%= f.label :description%><br />
      <%= f.text_field :description %>
    </div>
    <div class="field">
      <%= f.text_field :user_id %>
    </div>

    <div class="actions"><%= f.submit "New Domain" %></div>
<% end %>